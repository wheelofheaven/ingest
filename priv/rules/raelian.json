{
  "chapter_patterns": [
    "^# [A-ZÀ-Ü][A-ZÀ-Ü0-9 '!,.:;()\\-]{2,}$",
    "^#+\\s+CHAPITRE\\s+[IVXLCDM]+",
    "^#+\\s+Chapter\\s+\\d+",
    "^CHAPITRE\\s+[IVXLCDM]+[.:]?\\s*.*",
    "^Chapter\\s+\\d+[.:]?\\s+.*"
  ],
  "paragraph_separator": "\\n\\n",
  "strip_patterns": [
    "^\\d{1,3}$",
    "^Page \\d+",
    "^- \\d+ -$",
    "^©.*$"
  ],
  "speaker_patterns": {
    "dialogue_dash": "^[—–]\\s*",
    "known_speakers": ["Yahweh", "Raël", "Jesus", "Moses", "Elijah", "Buddha"]
  },
  "default_speaker": "Narrator"
}
